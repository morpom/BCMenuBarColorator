{
    "name": "BC Menu-Bar Colorator",
    "version": "1.0",
    "manifest_version": 3,
    "description": "Change the color of the Business Central Bar on top for different environments and never mix them up again!",
    "permissions": [
      "storage",
      "activeTab"
    ],
    "options_page": "options.html",
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    }
  }
  